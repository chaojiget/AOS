{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "shadcn": {
      "type": "remote",
      "url": "https://www.shadcn.io/api/mcp"
    }
  },
  "model": "openrouter/gpt-5.2-xhigh",
  "provider": {
    "openai": {
      "models": {
        "gpt-5": {
          "id": "gpt-5",
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
            "include": ["reasoning.encrypted_content"]
          }
        }
      }
    },
    "anthropic": {
      "models": {
        "claude-sonnet-4-5-20250929": {
          "id": "claude-sonnet-4-5-20250929",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        }
      }
    },
    "openrouter": {
      "models": {
        "gpt-5.2-xhigh": {
          "id": "openai/gpt-5.2",
          "name": "OpenAI GPT-5.2 (xhigh reasoning)",
          "options": {
            "reasoningEffort": "xhigh",
            "textVerbosity": "low",
            "reasoningSummary": "auto"
          }
        },
        "gpt-5.2-high": {
          "id": "openai/gpt-5.2",
          "name": "OpenAI GPT-5.2 (high reasoning)",
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "low",
            "reasoningSummary": "auto"
          }
        },
        "gpt-5.1": {
          "id": "openai/gpt-5.1",
          "name": "OpenAI GPT-5.1",
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "low",
            "reasoningSummary": "auto"
          }
        },
        "gpt-5.1-codex": {
          "id": "openai/gpt-5.1-codex",
          "name": "OpenAI GPT-5.1 Codex",
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "low",
            "reasoningSummary": "auto"
          }
        },
        "claude-opus-4.5": {
          "id": "anthropic/claude-opus-4.5",
          "name": "Claude Opus 4.5-thinking",
          "options": {
            "textVerbosity": "low",
            "reasoningSummary": "auto",
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "claude-sonnet-4.5": {
          "id": "anthropic/claude-sonnet-4.5",
          "name": "Claude Sonnet 4.5"
        },
        "claude-haiku-4.5": {
          "id": "anthropic/claude-haiku-4.5",
          "name": "Claude Haiku 4.5"
        }
      }
    }
  }
}
