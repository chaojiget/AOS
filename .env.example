POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=aos

# If you run backend locally (no Docker), use:
# POSTGRES_HOST=localhost

# LLM (pick ONE route)

# Route A: OpenRouter (OpenAI-compatible)
OPENROUTER_API_KEY=
OPENAI_API_KEY=
OPENAI_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=google/gemini-3-flash-preview

# Optional overrides (prefer leaving empty and rely on LLM_MODEL)
AOS_UI_MODEL=
AOS_AGENT_MODEL=
AOS_MEMORY_MODEL=

# Route B: DeepSeek native provider
DEEPSEEK_API_KEY=

AOS_MEMORY_LLM=0

# Optional (customize frontend build/install registry)
NPM_REGISTRY=https://registry.npmmirror.com

# =====================
# SECURITY CONFIGURATION
# =====================

# JWT Secret (CHANGE IN PRODUCTION!)
AOS_JWT_SECRET=your-super-secret-key-change-in-production

# API Key for service-to-service authentication
AOS_API_KEY=

# CORS Origins (comma-separated)
# Example: AOS_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
AOS_CORS_ORIGINS=http://localhost:3000

# Rate Limiting
# AOS_RATE_LIMIT_REQUESTS=100
# AOS_RATE_LIMIT_WINDOW=60

# =====================
# DEVELOPMENT MODE
# =====================
# Set to 1 to use SQLite instead of PostgreSQL (for local dev without Docker)
# AOS_DEV=1
